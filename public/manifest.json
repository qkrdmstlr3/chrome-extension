{
  "name": "Ear Protector Extension",
  "description": "An alarm tells you how long the sound has been playing!",
  "manifest_version": 3,
  "icons": {
    "16": "icon.jpg",
    "48": "icon.jpg",
    "128": "icon.jpg"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "alarms", "tabs", "alarms", "notifications"],
  "action": {
    "default_icon": {
      "16": "icon.jpg",
      "24": "icon.jpg",
      "32": "icon.jpg"
    },
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}
